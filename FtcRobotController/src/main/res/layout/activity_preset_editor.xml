<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Your custom view class: full package name -->
    <org.firstinspires.ftc.teamcode.ui.ZoneMapView
        android:id="@+id/zoneMapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- Bottom overlay with two buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="#80000000"
        android:padding="8dp">

        <Button
            android:id="@+id/btnZoneTool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zone"/>

        <Button
            android:id="@+id/btnCheckpointTool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Checkpoint"/>

    </LinearLayout>
</FrameLayout>
